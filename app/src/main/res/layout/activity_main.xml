<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Settings"
            android:text="@string/buttonSettings"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-smallcaps"
            style="@style/ButtonStyle" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:layout_weight="1" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/Result"
        android:layout_width="match_parent"
        android:background="@drawable/input_text"
        android:text="@string/Result"
        android:textColor="@color/black"
        style="@style/TextViewStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonC"
            android:text="@string/buttonC"
            android:textColor="@color/teal_700"
            style="@style/ButtonStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonBack"
            android:text="@string/buttonBack"
            android:textColor="@color/teal_700"
            style="@style/ButtonStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonPers"
            android:text="@string/buttonPers"
            android:textColor="@color/teal_700"
            style="@style/ButtonStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDiv"
            android:text="@string/buttonDiv"
            android:textColor="@color/teal_700"
            style="@style/ButtonStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button7"
            android:text="@string/button7"
            android:textColor="@color/black"
            style="@style/ButtonStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button8"
            android:text="@string/button8"
            android:textColor="@color/black"
            style="@style/ButtonStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button9"
            android:text="@string/button9"
            android:textColor="@color/black"
            style="@style/ButtonStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonX"
            android:text="@string/buttonX"
            android:textColor="@color/teal_700"
            style="@style/ButtonStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button4"
            android:text="@string/button4"
            android:textColor="@color/black"
            style="@style/ButtonStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button5"
            android:text="@string/button5"
            android:textColor="@color/black"
            style="@style/ButtonStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button6"
            android:text="@string/button6"
            android:textColor="@color/black"
            style="@style/ButtonStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonMinus"
            android:text="@string/buttonMinus"
            android:textColor="@color/teal_700"
            style="@style/ButtonStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button1"
            android:text="@string/button1"
            android:textColor="@color/black"
            style="@style/ButtonStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button2"
            android:text="@string/button2"
            android:textColor="@color/black"
            style="@style/ButtonStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button3"
            android:text="@string/button3"
            android:textColor="@color/black"
            style="@style/ButtonStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonPlus"
            android:text="@string/buttonPlus"
            android:textColor="@color/teal_700"
            style="@style/ButtonStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button0"
            android:text="@string/button0"
            android:textColor="@color/black"
            style="@style/ButtonStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button00"
            android:text="@string/button00"
            android:textColor="@color/black"
            style="@style/ButtonStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonPt"
            android:text="@string/buttonPt"
            android:textColor="@color/black"
            style="@style/ButtonStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonEq"
            android:text="@string/buttonEq"
            android:textColor="@color/teal_700"
            style="@style/ButtonStyle" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:layout_weight="1" />


</LinearLayout>